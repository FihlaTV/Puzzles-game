<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.micha.puzzle.RankingTable"
    android:background="#056545">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttons">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/rank4"
            android:onClick="onClick"
            android:background="#b388ff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/rank9"
            android:layout_toEndOf="@+id/rank4"
            android:layout_toRightOf="@+id/rank4"
            android:onClick="onClick"
            android:background="#b388ff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:id="@+id/rank16"
            android:layout_toEndOf="@+id/rank9"
            android:layout_toRightOf="@+id/rank9"
            android:onClick="onClick"
            android:background="#b388ff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:id="@+id/rank25"
            android:layout_toEndOf="@+id/rank16"
            android:layout_toRightOf="@+id/rank16"
            android:onClick="onClick"
            android:background="#b388ff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="36"
            android:id="@+id/rank36"
            android:layout_toEndOf="@+id/rank25"
            android:layout_toRightOf="@+id/rank25"
            android:onClick="onClick"
            android:background="#b388ff" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49"
            android:id="@+id/rank49"
            android:layout_toEndOf="@+id/rank36"
            android:layout_toRightOf="@+id/rank36"
            android:onClick="onClick"
            android:background="#b388ff" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rankList"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"></LinearLayout>
</RelativeLayout>
